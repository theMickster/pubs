{
  "EntityFrameworkCoreSettings": {
    "CommandLogLevel": "Warning",
    "ComamndTimeout": "60"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "NLog": {
      "IncludeScopes": true
    }
  },

  "AllowedHosts": "*",

  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "extensions": [
      { "assembly": "NLog.Web.AspNetCore" }
    ],

    "variables": {
      "logFileDir": "C:\\Temp\\Pubs\\API\\Log",
      "standardTextLayout": "${longdate} ${level:upperCase=true} ${logger}${newline}${message}${newline}"
    },

    "targets": {
      "defaultNlogAllFile": {
        "type": "File",
        "fileName": "${logFileDir}\\nlog-all-${shortdate}.log",
        "layout": "${standardTextLayout}"
      }
    },

    "rules": [
      {
        "logger": "*",
        "minlevel": "Trace",
        "writeTo": "defaultNlogAllFile",
        "ruleName": "PubsDefaultLogRule"
      }
    ]

  }
}
