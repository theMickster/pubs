@using Microsoft.Extensions.Options;
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pubs - @ViewData["Title"]</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <environment exclude="Producton">
        <link rel="stylesheet" href="~/lib/font-awesome/dist/css/fontawesome.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/dist/css/solid.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/dist/css/regular.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/NavBar.css" asp-append-version="true" />
    </environment>
    <environment include="Producton">
        <link rel="stylesheet" href="~/lib/font-awesome/dist/css/fontawesome.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/dist/css/solid.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/dist/css/regular.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/NavBar.min.css" asp-append-version="true" />
    </environment>

    @await RenderSectionAsync("AdditionalStyles", false)

</head>
<body>
<header>

    <partial name="_NavBarPartial"/>

</header>

<div class="container">


    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer">
    <div class="container">
        <div>
            <span>
                &copy; @DateTime.Now.Year - Mick Letofsky <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </span>
        </div>
        <div class="footer-version">
            <span>@("v" + GetType().Assembly.GetName().Version)</span>
        </div>
    </div>
    
</footer>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootbox.js/dist/bootbox.min.js"></script>
    

<environment include="Development">
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/NavBar.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/js/NavBar.min.js" asp-append-version="true"></script>
</environment>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
